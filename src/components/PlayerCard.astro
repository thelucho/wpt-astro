---
interface Props {
	name: string;
	image: string;
	sidePosition: string;
  birthPlace: string;
  rankingPosition: number;
}

const { name, image, sidePosition, birthPlace, rankingPosition } = Astro.props;
---

<div class={`bg-gradient-to-b from-transparent to-blue-900 bg-blend-multiply backdrop-blur-sm border border-gray-200 dark:border-gray-700 rounded-lg p-8 md:p-10 relative overflow-hidden`}>
  <img src={image} alt={name} class="absolute top-0 right-0 z-1 opacity-80" style="right: -52px;" />
  <span class="absolute bottom-0 left-0 font-poppins text-gray-500 dark:text-white opacity-5 text-9xl" style="left: -22px;">{ rankingPosition }</span>
  <div class="relative z-2 w-4/5">
    <p class="bg-green-100 text-green-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md dark:bg-gray-700 dark:text-green-400 mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-2.5 h-2.5 mr-1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
      </svg>
      { sidePosition }
    </p>
    <h2 class="text-gray-900 dark:text-white text-3xl font-extrabold mb-2">{name}</h2>
    <p class="text-blue-500 text-xs font-medium inline-flex items-center py-0.5 mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 mr-1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
      </svg>

      { birthPlace }
    </p><br>
    <a href="#" class="text-white dark:text-white hover:underline font-medium text-sm inline-flex items-center">View Player
      <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
      </svg>
    </a>
  </div>
</div>
